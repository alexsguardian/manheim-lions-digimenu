---
import '../styles/global.css'
import menuData from '../data/menu.json'
import MenuItemCard from '../components/MenuItemCard.astro'
import PaymentOptionCard from '../components/PaymentOptionCard.astro'
---

<html lang="en" class="h-full">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/CentennialLogo.png" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>Manheim Lions Digital Menu</title>
	</head>
	<body class="h-full m-0 p-0 font-sans text-base leading-6 bg-slate-100 dark:bg-slate-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
		<div class="portrait-container min-h-screen w-full flex flex-col relative">
			<!-- Header - Just the ribbon image -->
			<header class="shrink-0">
				<div class="max-w-4xl mx-auto text-center">
					<img src="./CentennialRibbon.png" alt="Manheim Lions Club Centennial Ribbon" class="h-96 w-auto mx-auto" onerror="this.style.display='none'" />
				</div>
			<hr class="border-t-4 border-yellow-400 dark:border-yellow-500 w-64 justify-center mx-auto"/>
			</header>

			<!-- Main Content - Optimized for portrait scrolling -->
			<main class="flex-1 overflow-y-auto py-6 px-6 bg-slate-100 dark:bg-slate-900 pb-48">
				<div class="max-w-4xl mx-auto">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <!-- Food Section (Left) -->
                        <section class="mb-8">
                            <h2 class="text-3xl font-extrabold text-center mb-6 transition-colors duration-300 bg-white dark:bg-blue-900/30 text-black dark:text-white rounded-xl py-3 shadow-lg">
                                Food
                            </h2>
                            <div class="space-y-4">
                                {menuData.food.map((item) => (
                                    <MenuItemCard
                                        name={item.name}
                                        description={item.description}
                                        price={item.price}
                                        accentClasses="border-blue-500 dark:border-blue-300"
                                        accentColor="#2563eb"
                                        nameClasses="text-black dark:text-white"
                                        imageSrc={item.imageSrc ?? undefined}
                                        imageAlt={item.name}
                                    />
                                ))}
                            </div>
                        </section>

                        <!-- Beverages Section (Right) -->
                        <section class="mb-8">
                            <h2 class="text-3xl font-extrabold text-center mb-6 transition-colors duration-300 bg-white dark:bg-green-900/30 text-black dark:text-white rounded-xl py-3 shadow-lg">
                                Beverages
                            </h2>
                            <div class="space-y-4">
                                {menuData.beverages.map((item) => (
                                    <MenuItemCard
                                        name={item.name}
                                        description={item.description}
                                        price={item.price}
                                        accentClasses="border-green-500 dark:border-green-300"
                                        accentColor="#16a34a"
                                        nameClasses="text-black dark:text-white"
                                        imageSrc={item.imageSrc ?? undefined}
                                        imageAlt={item.name}
                                    />
                                ))}
                            </div>
                        </section>
                    </div>

					<!-- Learn about us Section -->
					<section class="text-center mb-6 mt-24">
						<h3 class="text-3xl font-bold mb-6 text-gray-800 dark:text-white">Learn more about us!</h3>
						<div>
							<div class="flex items-center justify-center gap-8">
								<!-- Arrow pointing to QR code -->
								<div class="flex flex-col items-center">
									<!-- QR Code -->
									<div class="bg-white p-4 rounded-xl shadow-md">
										<p class="text-lg font-semibold text-gray-700 dark:text-black mb-4">Scan to visit our website</p>
										<img src="./qr-code.png" alt="QR Code to Manheim Lions Club website" class="w-64 h-64" onerror="this.style.display='none'" />
										<p class="text-lg font-semibold text-gray-700 dark:text-black">manheimlions.org</p>
									</div>
								</div>
							</div>
						</div>
					</section>
				</div>
			</main>

			<!-- Payment Info (Floating above footer) -->
			<section class="fixed bottom-20 left-0 right-0 bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 rounded-t-2xl shadow-lg px-6 py-4 z-40 mx-4 my-4">
				<div class="max-w-4xl mx-auto text-center">
					<h3 class="text-2xl font-extrabold mb-3 text-gray-800 dark:text-white tracking-tight">Payment Options</h3>
					<p class="text-lg font-semibold mb-4 text-gray-700 dark:text-gray-100">We accept cash and card payments!</p>
					<div class="grid grid-cols-2 gap-4 max-w-2xl mx-auto">
						<PaymentOptionCard label="Cash" accentColor="#16a34a" accentClasses="border-green-500 dark:border-green-300" />
						<PaymentOptionCard label="Card" accentColor="#2563eb" accentClasses="border-blue-500 dark:border-blue-300" />
					</div>
				</div>
			</section>

			<!-- Footer - Compact -->
			<footer class="bg-gray-800 dark:bg-slate-950 text-white py-4 px-6 transition-colors duration-300 shrink-0">
				<div class="max-w-4xl mx-auto text-center">
					<p class="text-base font-medium">Thank you for supporting the Manheim Lions Club!</p>
					<p class="text-sm text-gray-300 dark:text-gray-400 mt-1">Serving our community since 1925 â€¢ manheimlions.org</p>

					<!-- Hidden theme toggle for testing -->
					<button
						id="theme-toggle"
						class="fixed bottom-2 right-2 w-8 h-8 opacity-0 hover:opacity-20 transition-opacity duration-300 bg-transparent border-none cursor-pointer z-50"
						title="Theme Toggle (Testing Only)"
						aria-label="Toggle theme for testing">
					</button>
				</div>
			</footer>
		</div>
		<script>
			// Auto dark mode based on time
			let manualOverride = false;

			function updateTheme() {
				// Skip automatic updates if manual override is active
				if (manualOverride) return;

				const now = new Date();
				const hour = now.getHours();

				// Dark mode from 7 PM (19:00) to 7 AM (07:00)
				const isDarkTime = hour >= 19 || hour < 7;

				if (isDarkTime) {
					document.documentElement.classList.add('dark');
				} else {
					document.documentElement.classList.remove('dark');
				}
			}

			// Manual theme toggle for testing
			function toggleTheme() {
				const isDark = document.documentElement.classList.contains('dark');
				if (isDark) {
					document.documentElement.classList.remove('dark');
				} else {
					document.documentElement.classList.add('dark');
				}

				// Enable manual override for 5 minutes
				manualOverride = true;
				setTimeout(() => {
					manualOverride = false;
					updateTheme(); // Resume automatic switching
				}, 5 * 60 * 1000); // 5 minutes
			}

			// Update theme immediately
			updateTheme();

			// Check every minute for theme changes
			setInterval(updateTheme, 60000);

			// Also check when page becomes visible again (in case time changed while hidden)
			document.addEventListener('visibilitychange', () => {
				if (!document.hidden) {
					updateTheme();
				}
			});

			// Add click handler for theme toggle
			document.addEventListener('DOMContentLoaded', () => {
				const toggleButton = document.getElementById('theme-toggle');
				if (toggleButton) {
					toggleButton.addEventListener('click', toggleTheme);
				}
			});
		</script>
	</body>
</html>
